{
  "name": "@haibun/web-accessibility-axe",
  "type": "module",
  "version": "1.44.4",
  "description": "web accessibility test using axe for haibun",
  "main": "build/a11y-axe-stepper.js",
  "files": [
    "build/",
    "tsconfig.json"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -c .eslintrc.json --ext .ts,.js src",
    "test": "vitest run",
    "test-nodemon": "npx nodemon -V  -e ts --watch './src/**/**.ts' --exec 'clear; npm run build && npm run test'",
    "coverage": "jest --config jest.config.ts --coverage",
    "test-watch": "vitest --hideSkippedTests",
    "build": "tsc -b .",
    "build-watch": "tsc --watch",
    "tsc": "tsc",
    "prepublishOnly": "tsc -b .",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@haibun/core": "1.44.0",
    "@haibun/domain-storage": "1.44.0",
    "@types/node": "^20.3.1",
    "axe-core": "^4.6.2",
    "axe-html-reporter": "^2.2.3",
    "playwright": "1.52"
  },
  "devDependencies": {
    "@haibun/cli": "1.44.4",
    "@haibun/storage-mem": "1.44.4",
    "@haibun/web-playwright": "1.44.4",
    "@types/express": "^4.17.17",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 182
  }
}
