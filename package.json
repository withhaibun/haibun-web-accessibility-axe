{
  "name": "@haibun/web-accessibility-axe",
  "type": "module",
  "version": "1.69.0",
  "description": "web accessibility test using axe for haibun",
  "main": "build/a11y-axe-stepper.js",
  "files": [
    "build/",
    "tsconfig.json"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -c .eslintrc.json --ext .ts,.js src",
    "test": "vitest run",
    "test-nodemon": "npx nodemon -V  -e ts --watch './src/**/**.ts' --exec 'clear; npm run build && npm run test'",
    "test-watch": "vitest --hideSkippedTests",
    "build": "tsc -b .",
    "build-watch": "tsc --watch",
    "tsc": "tsc",
    "prepublishOnly": "tsc -b .",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@haibun/core": "~1.65.1",
    "@haibun/domain-storage": "~1.65.1",
    "axe-core": "^4.10.3",
    "axe-html-reporter": "^2.2.11",
    "playwright": "1.52"
  },
  "devDependencies": {
    "@haibun/cli": "~1.65.1",
    "@haibun/storage-mem": "~1.65.1",
    "@haibun/web-playwright": "~1.65.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 182
  }
}
