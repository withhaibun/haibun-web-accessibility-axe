{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "esnext",
    "module": "NodeNext",
    "lib": [
      "es2020", "DOM", "ESNext"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
